[Unit]
Description=Envoy
Wants=network-online.target
After=network-online.target

StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
User=root
Group=root
Type=simple
Restart=on-failure
RestartSec=20s
ExecStart=/usr/local/bin/envoy --config-path /etc/envoy/envoy.yaml

[Install]
WantedBy=multi-user.target
